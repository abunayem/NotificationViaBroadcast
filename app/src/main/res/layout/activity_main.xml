<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/included_toolbarLayout"
        layout="@layout/app_bar_all"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSendBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_broadcast" />

        <Button
            android:id="@+id/btnLaunchNotificationActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launch_notification_activity" />

    </LinearLayout>

</LinearLayout>